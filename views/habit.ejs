<!doctype html>
<html lang="en">

<head>
    <!-- Meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/svg+xml" href="https://example.com/image.svg">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
    <title>Habit Tracker</title>
</head>

<body>
    <!-- Heading -->
    <header class="bg-primary text-white py-4">
        <div class="container text-center">
            <h1 class="display-4 d-inline-flex align-items-center">
                <img src="/assets/Images/habit-logo-Track.jpg" alt="logo" class="rounded-circle me-3" width="70" height="70">
                Habit Tracker
            </h1>
        </div>
    </header>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <!-- Add Habit Section -->
                <div class="modal-dialog modal-lg shadow-lg border-0 mb-4">
                    <div class="modal-content rounded-4">
                        <div class="modal-header bg-secondary text-white rounded-top">
                            <h5 class="modal-title">Add a Habit to Track</h5>
                        </div>
                        <div class="modal-body">
                            <form action="/habit" method="POST">
                                <div class="mb-3">
                                    <label for="habit-name" class="form-label">Habit Name</label>
                                    <input type="text" class="form-control shadow-none" id="habit-name" name="content"
                                        placeholder="Enter here..." autocomplete="off">
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-primary">Add Habit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <% habit.forEach(habits => { 
                let tzoffset = (new Date()).getTimezoneOffset() * 60000, found = false, status = '';
                let today = (new Date(Date.now() - tzoffset)).toISOString().slice(0, 10);
                habits.dates.find(function (item) {
                    if (item.date === today) {
                        found = true;
                        status = item.complete;
                    }
                });
            %>
                <div class="col-md-8 mb-4">
                    <div class="card shadow-lg rounded-4">
                        <div class="card-header bg-success text-white rounded-top">
                            <%= habits.content %>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <span class="badge bg-secondary">Weekly</span>
                                <a href="/<%= habits._id %>" class="btn btn-danger">
                                    <i class="bi bi-archive-fill"></i>
                                </a>
                            </div>

                            <div class="d-flex flex-wrap">
                                <% days.forEach(day => { 
                                    let found = false, status = '';
                                    habits.dates.find(function (item) {
                                        if (item.date === day.date) {
                                            found = true;
                                            status = item.complete;
                                        }
                                    });
                                %>
                                    <div class="m-2">
                                        <div class="circular-progress">
                                            <div class="value-container">
                                                <%= day.day %> <br>
                                                <span><%= day.date.slice(-2) %></span>
                                            </div>
                                        </div>
                                        <table class="table table-bordered mt-2">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        <div class="text-center">
                                                            <a href="habitStatus/?id=<%= habits._id %>&date=<%= day.date %>">
                                                                <% if (found && status === 'yes') { %>
                                                                    <abbr title="Click to Undo">
                                                                        <i class="fa-solid fa-circle-check fa-2x text-success"></i>
                                                                    </abbr>
                                                                <% } else if (found && status === 'no') { %>
                                                                    <abbr title="Click to Mark Done">
                                                                        <i class="fa-sharp fa-solid fa-circle-xmark fa-2x text-danger"></i>
                                                                    </abbr>
                                                                <% } else { %>
                                                                    <abbr title="Click to Mark Done">
                                                                        <i class="fa-solid fa-circle-minus fa-2x"></i>
                                                                    </abbr>
                                                                <% } %>
                                                            </a>
                                                        </div>
                                                    </th>
                                                </tr>
                                            </thead>
                                        </table>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- FontAwesome Icon Script -->
    <script src="https://kit.fontawesome.com/d5635d350d.js" crossorigin="anonymous"></script>
    <!-- Bootstrap Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
        integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
        crossorigin="anonymous"></script>
</body>

</html>
